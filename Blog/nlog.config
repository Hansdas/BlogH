<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Trace|Debug|Info|Warn|Error|Fatal" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--

   -->
  <targets>
    <!--<target name="console" xsi:type ="Console" />
    <target name="debugger" xsi:type="Debugger" layout="${date:format=HH\:mm\:ss.fff}: ${message}" />
    <target name="error_file" xsi:type="File"
                    fileName="${basedir}/Logs/Error/${shortdate}/error.txt" maxArchiveFiles="30"
                    layout="${longdate} | ${level:uppercase=false} | ${message} ${onexception:${exception:format=tostring} ${newline} ${stacktrace} ${newline}" />-->
    <target name="*" xsi:type="File"
                fileName="${basedir}/TemporaryFile/Logger/${shortdate}/info.txt" maxArchiveFiles="5"
                layout="${longdate} | ${level:uppercase=false} | ${message} ${onexception:${exception:format=tostring} ${newline} ${stacktrace} ${newline}" />
    <target name="database" xsi:type="Database"  dbProvider="MySql.Data.MySqlClient.MySqlConnection,Mysql.Data"
            connectionString ="Server=58.87.92.221;User Id=sa;Password=mysql@123456;Database=Blog;Character Set=utf8;SslMode=none;"
            commandText="INSERT INTO s_log (Date,Account,Level,Logger,Message,Exception) Values(@Date,@Account,@Level,@Logger,@Message, @Exception);"
            >
      <parameter name = "@Date" layout = "${longdate}" />
      <parameter name = "@Account" layout = "${event-context:item=Account}"/>
      <parameter name = "@Level" layout = "${event-context:item=Level}" />
      <parameter name = "@Logger" layout = "${event-context:item=Logger}"/>
      <parameter name = "@Message" layout = "${event-context:item=Message}" />
      <parameter name = "@Exception" layout ="${stacktrace}"/>
      <!--<dbProvider>MySql.Data.MySqlClient</dbProvider>-->
    </target>
  </targets>
  <rules>
    <!--<logger name="*" writeTo="console" />
    <logger name="*" minlevel="Debug" writeTo="debugger" />
    <logger name="*" minlevel="Error" writeTo="error_file" />
    <logger name="*" level="Info" writeTo="info" />-->
    <logger name="*"  writeTo="database" />
  </rules>
</nlog>
