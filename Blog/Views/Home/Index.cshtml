<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width = device-width" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <script src="~/js/jquery.js"></script>
    <script src="~/layui/layui.js"></script>
    <script src="~/js/layout.js?v=12536"></script>

    <script>
        layui.use('element', function () {
            var element = layui.element;
        });
    </script>
</head>


@model Blog.Application.ViewModel.UserModel
@using Blog
@{
    Blog.Application.ViewModel.UserModel user = Auth.GetLoginUser();
}
<body>
    <div class="fly-header layui-bg-black">
        <div class="layui-header">
            <ul class="layui-nav layui-layout-right nav-right">
                @if (user == null)
                {
                    <li class="layui-nav-item">
                        <a href="../login/login">还未登录</a>
                    </li>
                }
                else
                {
                    <li class="layui-nav-item">
                        <a href="">控制台<span class="layui-badge">9</span></a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="">个人中心<span class="layui-badge-dot"></span></a>
                    </li>
                    <li class="layui-nav-item" lay-unselect="">
                        <a href=""><img src="" class="layui-nav-img" />@user.Username</a>
                        <dl class="layui-nav-child" style="color:white !important">
                            <dd><a href="javascript:;">修改信息</a></dd>
                            <dd><a href="javascript:;">安全管理</a></dd>
                            <dd><a href="../Login/LoginOut">退了</a></dd>
                        </dl>
                    </li>
                }

            </ul>
        </div>
    </div>
    <div class="header">
        <div class="menu-btn">
            <div class="menu"></div>
        </div>

        <h1 class="logo">
            <a href="index.html">
                <img src="~/img/logo.png">
            </a>
        </h1>
        <div class="nav">
            <a href="index.html" class="active">文章</a>
            <a href="javascript:;">微语</a>
            <a href="leacots.html">留言</a>
            <a href="album.html">相册</a>
            <a href="about.html">关于</a>
        </div>
        <div class="btn">

        </div>

    </div>
    <iframe id="console" frameborder=0 width="100%" height="100%" scrolling=no marginwidth='0' marginheight='0' frameborder='0' noresize="noresize"></iframe>
    <div class="footer-wrap">
        <div class="footer w1000">
            <div class="qrcode">
                <img src="../res/img/erweima.jpg">
            </div>
            <div class="practice-mode">
                <img src="../res/img/down_img.jpg">
                <div class="text">
                    <h4 class="title">我的联系方式</h4>
                    <p>微信<span class="WeChat">1234567890</span></p>
                    <p>手机<span class="iphone">1234567890</span></p>
                    <p>邮箱<span class="email">1234567890@qq.com</span></p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>