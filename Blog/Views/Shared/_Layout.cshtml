<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width = device-width" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/main.css?v=20192221" rel="stylesheet" />
</head>
@model Domain.User
@using Blog.Auth
@{ 
    Domain.User user = Auth.GetLoginUser();
}
<body>
    <div class="header">
        <div class="menu-btn">
            <div class="menu"></div>
        </div>
        <h1 class="logo">
            <a href="index.html">
                <img src="~/img/logo.png">
            </a>
        </h1>
        <div class="nav">
            <a href="index.html">文章</a>
            <a href="whisper.html">微语</a>
            <a href="leacots.html">留言</a>
            <a href="album.html" class="active">相册</a>
            <a href="about.html">关于</a>
        </div>
        <ul class="layui-nav header-down-nav">
            <li class="layui-nav-item"><a href="index.html">文章</a></li>
            <li class="layui-nav-item"><a href="whisper.html">微语</a></li>
            <li class="layui-nav-item"><a href="leacots.html">留言</a></li>
            <li class="layui-nav-item"><a href="album.html" class="active">相册</a></li>
            <li class="layui-nav-item"><a href="about.html">关于</a></li>
        </ul>
        <p class="welcome-text">
            @if (user == null)
            {
                <a href="../Login/login">还未登录</a>
            }
            else
            {
                <span class="name">欢迎来到小明的博客 ~</span>
            }
        </p>
    </div>
    @RenderBody();
    <div class="footer-wrap">
        <div class="footer w1000">
            <div class="qrcode">
                <img src="../res/img/erweima.jpg">
            </div>
            <div class="practice-mode">
                <img src="../res/img/down_img.jpg">
                <div class="text">
                    <h4 class="title">我的联系方式</h4>
                    <p>微信<span class="WeChat">1234567890</span></p>
                    <p>手机<span class="iphone">1234567890</span></p>
                    <p>邮箱<span class="email">1234567890@qq.com</span></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>