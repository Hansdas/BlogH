
@{
    Layout =null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HH Blog</title>
    <environment names="Development">
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/bootstrap.min.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/bootstrap-responsive.min.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/font-awesome.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/style-metro.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/style.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/style-responsive.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/default.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/uniform.default.css" rel="stylesheet" />
        <link simpl-append-version="true" href="~/demo/metronic.bootstrap/media/css/login.css" rel="stylesheet" />
        <link simpl-append-version="true" rel="shortcut icon" href="~/demo/metronic.bootstrap/media/image/favicon.ico" />
        <link simpl-append-version="true" href="~/css/warn.css" rel="stylesheet" />
    </environment>

</head>
<body class="login">
    <div class="logo">
        <img src="~/demo/metronic.bootstrap/media/image/login.png" />
    </div>
    <div class="content" ng-app="loginApp">
        <form class="form-vertical login-form" name="myForm" ng-submit="LoginCheck()" ng-controller="loginValidate" novalidate>
            <h3 class="form-title">登录账户</h3>
            <div class="alert alert-error hide">
                <span class="alertError" ng-show="sName"></span>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">账号</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-user"></i>
                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="账号" name="username" ng-model="username" required />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        <input class="m-wrap placeholder-no-fix" type="password" placeholder="密码" name="password" ng-model="password" required />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="1" /> 记住密码
                </label>
                <button type="submit" class="btn green pull-right">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            <div class="forget-password">
                <h4>忘记密码？</h4>
                <p>
                    别担心, 点击 <a href="javascript:;" class="" id="forget-password">here</a>
                    去重置你的密码
                </p>
            </div>
            <div class="create-account">
                <p>
                    没有账户？&nbsp;
                    <a href="javascript:;" id="register-btn" ng-click="Register()" class="">快速注册</a>
                </p>
            </div>
        </form>
        <form class="form-vertical forget-form" action="index.html">
            <h3 class="">忘记密码 ?</h3>
            <p>登录邮箱去重置密码</p>
            <div class="control-group">
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-envelope"></i>
                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="Email" name="email" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn">
                    <i class="m-icon-swapleft"></i>返回
                </button>
                <button type="submit" class="btn green pull-right">
                    提交 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        </form>
        <form class="form-vertical register-form" name="myRegister" ng-controller="RegisterController" ng-submit="SignUp()" novalidate>
            <h3 class="">注册</h3>
            <p>在下面输入您的帐户详细信息 :</p>
            <div class="alert alert-error hide">
                <span class="alertError" ng-show="registerError"></span>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">账号</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-user"></i>
                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="账号"  name="username" ng-model="username"  required/>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        <input class="m-wrap placeholder-no-fix" type="password" id="register_password" placeholder="密码" name="password" ng-model="password" required />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">重新输入密码</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-ok"></i>
                        <input class="m-wrap placeholder-no-fix" type="password" placeholder="重新输入密码" name="rpassword" ng-model="rpassword" required />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        <input type="checkbox" name="tnc" /> 我同意 <a href="#">服务条件</a> 和 <a href="#">隐私权政策</a>
                    </label>
                    <div id="register_tnc_error"></div>
                </div>
            </div>
            <div class="form-actions">
                <button id="register-back-btn" type="button" class="btn">
                    <i class="m-icon-swapleft"></i>  返回
                </button>
                <button type="submit" class="btn green pull-right">
                    注册 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="copyright">
        2018-3-8 &copy; HH创建.
    </div>
    <script src="~/demo/metronic.bootstrap/media/js/jquery-1.10.2.min.js"></script>
    <script src="~/demo/metronic.bootstrap/media/js/bootstrap.min.js"></script>
    <script src="~/angular/angular.min.js"></script>
    @*<script src="~/angular/app.js"></script>*@
    <script src="~/angular/Service/LoginService.js"></script>
    <script src="~/angular/Controllers/LoginIndex/LoginController.js"></script>
    <script src="~/angular/Controllers/LoginIndex/RegisterController.js"></script>
